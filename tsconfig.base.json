{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@eraser/core": [
        "packages/core/src",
        "packages/core/dist"
      ],
      "@eraser/viewer": [
        "packages/viewer/src",
        "packages/viewer/dist"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}