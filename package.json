{
  "name": "eraser",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "start": "concurrently -n PACKAGES,ANGULAR \"pnpm dev\" \"cd apps/playground && pnpm ng serve\"",
    "test": "pnpm -r --filter \"./packages/*\" run test",
    "watch": "pnpm -r --parallel --filter \"./packages/*\" run watch",
    "dev": "pnpm watch",
    "build:packages": "pnpm -r --stream --filter \"./packages/*\" run build",
    "build:diagram": "cd apps && pnpm ng build diagram-viewer",
    "build:playground": "cd apps && pnpm ng build playground",
    "build": "pnpm build:packages && pnpm build:diagram && pnpm build:playground"
  },
  "devDependencies": {
    "@types/codemirror": "^5.60.17",
    "@types/dagre": "^0.7.53",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^29.5.5",
    "concurrently": "^9.0.0",
    "dagre": "^0.8.5",
    "jest": "^29.7.0",
    "pnpm": "10.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.8",
    "codemirror": "^6.0.2",
    "file-saver": "^2.0.5",
    "svg-pan-zoom": "^3.6.2"
  }
}